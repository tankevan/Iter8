<h3><%= @iterable.name %></h3>

<div class="well">
<% for post in @posts %>
	<ul>
		<% for action in post.actions.all %>
			<li><%= action.action %>
				<%= link_to "show", post_path(post) %>
				<%= link_to "x", action_path(:action_id => action.id), :method => "delete" %>
			</li>
		<% end %>
	</ul>
<% end %>
</div>

<%= render :partial => "shared/post-form" %>

<div id="post-area">
	<%= render :partial => "shared/post", :collection => @posts %>
</div>

<div class="side-column well span2">
	<%= link_to "Add New User", new_iterable_iterablesuser_path(@iterable) %>

	<% for user in @users %>
		<div class="inner-container">
			<p><%= user.email %></p>
			<% if current_user.id != user.id %>	
				<%= link_to "x", iterablesuser_path(:user_deleted => user.id), :method => "delete", :class => "delete-button" %>
			<% end %>
		</div>
	<% end %>
	</div>